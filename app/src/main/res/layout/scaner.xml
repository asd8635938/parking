<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#88000000">

<include layout="@layout/title_bar" android:id="@+id/title_bar"/>

    <View
        android:id="@+id/scanner_view"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="@dimen/dp100"
        android:layout_marginRight="@dimen/dp100"
        android:background="#000000"
        android:layout_height="@dimen/dp170"/>
    <View
        android:id="@+id/scanner_view_bg"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="@id/scanner_view"
        app:layout_constraintLeft_toLeftOf="@id/scanner_view"
        app:layout_constraintRight_toRightOf="@id/scanner_view"
        app:layout_constraintBottom_toBottomOf="@id/scanner_view"
        android:layout_marginLeft="@dimen/dp100"
        android:layout_marginRight="@dimen/dp100"
        android:background="@mipmap/scanningframe"
        android:layout_height="@dimen/dp170"/>


    <ImageView
        android:id="@+id/scanner_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/scanningstripes"
        app:layout_constraintLeft_toLeftOf="@id/scanner_view"
        app:layout_constraintTop_toTopOf="@id/scanner_view"
        app:layout_constraintRight_toRightOf="@id/scanner_view"
        app:layout_constraintBottom_toBottomOf="@id/scanner_view"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp50"
        android:layout_marginRight="@dimen/dp50"
        android:textColor="#ffffff"
        android:gravity="center"
        android:textSize="15sp"
        android:text="将二维码/条码放入框内即可自动扫描"
        app:layout_constraintTop_toBottomOf="@id/scanner_view"
        android:layout_marginTop="@dimen/dp30"
        />




</android.support.constraint.ConstraintLayout>