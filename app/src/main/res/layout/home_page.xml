<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/home_page_title" android:id="@+id/title"/>


    <com.baidu.mapapi.map.MapView
        android:id="@+id/baidu_map"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/title"
        app:layout_constraintTop_toBottomOf="@id/title">

    </com.baidu.mapapi.map.MapView>
    <include layout="@layout/parkingstate"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:id="@+id/state_layout"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/banner_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp140"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:layout_marginTop="@dimen/dp18"
        app:layout_constraintTop_toBottomOf="@id/title"
        />
    <ImageView
        android:id="@+id/image_close_banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/closebanner"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        app:layout_constraintRight_toRightOf="@id/banner_view"
        app:layout_constraintTop_toTopOf="@id/banner_view"
        />
    <ImageView
    android:id="@+id/refresh_btn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@mipmap/refresh"
    android:layout_marginBottom="@dimen/dp30"
    android:layout_marginLeft="@dimen/dp15"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintBottom_toTopOf="@id/location_btn"
    />

    <ImageView
        android:id="@+id/location_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/location"
        android:layout_marginBottom="@dimen/dp30"
        android:layout_marginLeft="@dimen/dp15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <ImageView
        android:id="@+id/list_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/listbtn"
        android:layout_marginBottom="@dimen/dp30"
        android:layout_marginRight="@dimen/dp15"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/persona_btn"
        />

    <ImageView
        android:id="@+id/persona_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/personalcenter"
        android:layout_marginBottom="@dimen/dp30"
        android:layout_marginRight="@dimen/dp15"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <ImageView
        android:id="@+id/scanning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/scanpage"
        android:layout_marginBottom="@dimen/dp15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />


</android.support.constraint.ConstraintLayout>