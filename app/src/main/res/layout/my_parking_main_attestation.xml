<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/title_bar" android:id="@+id/title_bar"/>

    <Button
        android:id="@+id/to_attestation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp15"
        android:textColor="#ffffff"
        android:text="去认证"
        android:paddingLeft="@dimen/dp50"
        android:paddingRight="@dimen/dp30"
        android:background="@drawable/login_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:textSize="@dimen/sp18"
        android:text="请先认证车位主"
        app:layout_constraintBottom_toTopOf="@id/to_attestation"
        app:layout_constraintLeft_toLeftOf="@id/to_attestation"
        app:layout_constraintRight_toRightOf="@id/to_attestation"
        android:layout_marginBottom="@dimen/dp20"
        />

    <TextView
        android:id="@+id/my_rent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp15"
        android:textColor="#27c38a"
        android:text="我要出租车位"
        app:layout_constraintLeft_toLeftOf="@id/to_attestation"
        app:layout_constraintRight_toRightOf="@id/to_attestation"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp30"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/dp3"
        app:layout_constraintTop_toBottomOf="@id/my_rent"
        app:layout_constraintLeft_toLeftOf="@id/my_rent"
        app:layout_constraintRight_toRightOf="@id/my_rent"
        android:background="#27c38a"
        app:layout_constraintStart_toStartOf="@id/my_rent"
        app:layout_constraintEnd_toEndOf="@id/my_rent"
        />

    <LinearLayout
        android:id="@+id/dialog_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        android:background="#80000000"
        android:visibility="gone"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffffff"
            >
            <TextView
                android:id="@+id/contact_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="联系客服"
                android:textSize="@dimen/sp15"
                android:textColor="#333333"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp15"
                android:layout_marginBottom="@dimen/dp15"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:background="#f2f2f2"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginRight="@dimen/dp20"
                />
            <TextView
                android:id="@+id/cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="取消"
                android:textSize="@dimen/sp15"
                android:textColor="#333333"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp15"
                android:layout_marginBottom="@dimen/dp15"
                />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>