<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:background="#30000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp15"
            >
            <TextView
                android:id="@+id/hint"
                android:layout_width="0dp"
                android:layout_weight="11"
                android:paddingLeft="@dimen/dp35"
                android:layout_height="wrap_content"
                android:text="支付"
                android:gravity="center"
                android:textColor="#333333"
                android:textSize="@dimen/sp23" />
            <ImageView
                android:id="@+id/close"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@mipmap/closepopup"
                android:layout_marginRight="14dp"
                />

        </LinearLayout>
        <View
            android:layout_marginTop="@dimen/dp5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:background="#f2f2f2"
            />
        <TextView
            android:id="@+id/pay_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp15"
            android:textSize="@dimen/sp23"
            android:text="3"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp13"
            android:layout_marginRight="@dimen/dp13"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp30"
            >
            <TextView
                android:layout_width="@dimen/dp0"
                android:layout_height="wrap_content"
                android:text="优惠券抵扣"
                android:textSize="@dimen/sp12"
                android:textColor="#494949"
                android:gravity="left"
                android:layout_weight="9"
                />
            <TextView
                android:id="@+id/discount_coupon_coin"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="2"
                />
            <ImageView
                android:id="@+id/select_discount_coupon"
                android:layout_width="@dimen/dp0"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:src="@mipmap/right"
                android:background="null"
                />

        </LinearLayout>
        <View
            android:layout_marginTop="@dimen/dp5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:background="#f2f2f2"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp52"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/moneypackge"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="钱包支付"
                android:textColor="#494949"
                android:textSize="@dimen/sp12"
                android:layout_marginLeft="@dimen/dp15"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/confirm_pay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:orientation="horizontal"
            android:background="#27c38a"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp15"
                android:text="确认支付"
                />
            <TextView
                android:id="@+id/pay_coin_ultimately"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp15"
                android:text="3"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>