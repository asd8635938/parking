<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#30000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp260"
        android:background="#ffffff"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp35"
        android:layout_marginRight="@dimen/dp35"
        >
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40"
            android:text="发现新版本"
            android:gravity="center"
            android:textColor="#333333"
            android:textSize="@dimen/sp12" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:layout_marginRight="@dimen/dp13"
            android:layout_marginLeft="@dimen/dp13"
            android:background="#f2f2f2"
            />

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="更新内容
1. 60更新内容
2.更新采用本地读取作物信息模式
3. 更新显示商店物品
4.更新识别新作物百香果
5.更新几处bug"
            android:paddingTop="@dimen/dp13"
            android:paddingLeft="@dimen/dp13"
            android:textSize="@dimen/sp15"
            android:textColor="#494949"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp15"
            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="@dimen/dp0"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/cancel_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="取消"
                    android:textSize="@dimen/sp15"
                    android:textColor="#494949"
                    android:background="@drawable/down_btn"
                    android:layout_marginBottom="@dimen/dp5"
                    android:layout_marginTop="@dimen/dp5"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="@dimen/dp0"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                >
                <Button
                    android:id="@+id/confirm_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="确认"
                    android:textSize="@dimen/sp15"
                    android:textColor="#ffffff"
                    android:background="@drawable/login_btn"
                    android:layout_marginBottom="@dimen/dp5"
                    android:layout_marginTop="@dimen/dp5"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>