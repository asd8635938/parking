<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/title_bar" android:id="@+id/title_bar"/>

    <ScrollView
        app:layout_constraintTop_toBottomOf="@id/title_bar"
        android:layout_marginTop="@dimen/dp13"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="@dimen/dp13"
        android:layout_marginRight="@dimen/dp13"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginRight="@dimen/dp13"
                android:layout_marginLeft="@dimen/dp13"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="340dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="身份证正面"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp15"
                    />
                <ImageButton
                    android:id="@+id/front_btn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp150"
                    android:src="@mipmap/uploadidcard"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="身份证反面"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp15"
                    />
                <ImageButton
                    android:id="@+id/tail_btn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp150"
                    android:src="@mipmap/uploadidcard"
                    />

            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_marginRight="@dimen/dp13"
                android:layout_marginLeft="@dimen/dp13"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp13"
                android:layout_height="340dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="车位证明"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp15"
                    />
                <ImageButton
                    android:id="@+id/parking_certification_btn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp150"
                    android:src="@mipmap/uploadidcard"
                    />

            </LinearLayout>



            <LinearLayout
                android:orientation="vertical"
                android:layout_marginRight="@dimen/dp13"
                android:layout_marginLeft="@dimen/dp13"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp13"
                android:layout_height="340dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="物业同意"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp15"
                    />
                <ImageButton
                    android:id="@+id/property_consent"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp150"
                    android:src="@mipmap/uploadidcard"
                    />

            </LinearLayout>

            <Button
                android:id="@+id/submit_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp20"
                android:layout_marginBottom="@dimen/dp30"
                android:background="@drawable/greenbtn"
                android:text="提交"
                android:textSize="@dimen/sp18"
                android:textColor="#ffffff"
                />

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>