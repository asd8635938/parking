<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/title_bar" android:id="@+id/title"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/fail"
        app:layout_constraintLeft_toLeftOf="@id/quite_regret_text"
        app:layout_constraintRight_toRightOf="@id/quite_regret_text"
        app:layout_constraintBottom_toTopOf="@id/quite_regret_text"
        android:layout_marginBottom="@dimen/dp15"
        />

    <TextView
        android:id="@+id/quite_regret_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="#898989"
        android:textSize="@dimen/sp15"
        android:text="很抱歉"
        />
    <TextView
        android:id="@+id/equipment_connection_fail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#898989"
        android:textSize="@dimen/sp15"
        android:text="设备连接不成功"
        app:layout_constraintLeft_toLeftOf="@id/quite_regret_text"
        app:layout_constraintRight_toRightOf="@id/quite_regret_text"
        app:layout_constraintTop_toBottomOf="@id/quite_regret_text"
        android:layout_marginTop="@dimen/dp15"
        />

    <TextView
        android:id="@+id/please_again_scanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#898989"
        android:textSize="@dimen/sp15"
        android:text="请再次扫描"
        app:layout_constraintLeft_toLeftOf="@id/quite_regret_text"
        app:layout_constraintRight_toRightOf="@id/quite_regret_text"
        app:layout_constraintTop_toBottomOf="@id/equipment_connection_fail"
        android:layout_marginTop="@dimen/dp15"
        />
    <Button
        android:text="扫一扫"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp12"
        android:paddingLeft="@dimen/dp40"
        android:paddingRight="@dimen/dp40"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp40"
        android:background="@drawable/login_btn"
        android:layout_marginTop="@dimen/dp15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/please_again_scanner"

        />


</android.support.constraint.ConstraintLayout>