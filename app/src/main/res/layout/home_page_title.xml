<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp50"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/title_bg">

    <ImageView
        android:id="@+id/image_locationbg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/locationbg"
        android:layout_marginLeft="@dimen/dp15"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/location_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:layout_marginLeft="@dimen/dp3"
        android:text="深圳"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/image_locationbg"
        />
    <View
        android:id="@+id/round_bg"
        android:layout_width="@dimen/dp230"
        android:layout_height="@dimen/dp30"
        android:layout_marginLeft="@dimen/dp35"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/location_text"
        android:background="@drawable/verificationcode"
        />
    <ImageView
        android:id="@+id/image_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp15"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/round_bg"
        android:src="@mipmap/search"
        />
    <EditText
        android:id="@+id/edit_search"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp30"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/image_search"
        app:layout_constraintEnd_toEndOf="@id/round_bg"
        android:hint="@string/search_content"
        android:textColorHint="#898989"
        android:textSize="12sp"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginRight="@dimen/dp10"
        android:background="@null"
        />
        <ImageView
            android:id="@+id/image_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/remind"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="@dimen/dp20"
            />

</android.support.constraint.ConstraintLayout>