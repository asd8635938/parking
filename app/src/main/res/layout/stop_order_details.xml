<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <include layout="@layout/title_bar" android:id="@+id/title_bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp0"
        android:orientation="horizontal"
        android:layout_weight="4"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="@dimen/dp0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp13"
                android:text="当前状态"
                android:textSize="@dimen/sp15"
                android:textColor="#333333"
                android:layout_marginTop="@dimen/dp15"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp13"
                android:text="使用时长"
                android:textSize="@dimen/sp15"
                android:textColor="#333333"
                android:layout_marginTop="@dimen/dp15"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp13"
                android:text="订单号"
                android:textSize="@dimen/sp15"
                android:textColor="#333333"
                android:layout_marginTop="@dimen/dp15"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp13"
                android:text="车锁ID"
                android:textSize="@dimen/sp15"
                android:textColor="#333333"
                android:layout_marginTop="@dimen/dp15"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp13"
                android:text="使用地点"
                android:textSize="@dimen/sp15"
                android:textColor="#333333"
                android:layout_marginTop="@dimen/dp15"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp13"
                android:text="车位类型"
                android:textSize="@dimen/sp15"
                android:textColor="#333333"
                android:layout_marginTop="@dimen/dp15"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp13"
                android:text="车位编号"
                android:textSize="@dimen/sp15"
                android:textColor="#333333"
                android:layout_marginTop="@dimen/dp15"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp13"
                android:text="费用"
                android:textSize="@dimen/sp15"
                android:textColor="#333333"
                android:layout_marginTop="@dimen/dp15"
                />

        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="@dimen/dp0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right"
            >
            <TextView
                android:id="@+id/state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp13"
                android:text="使用中"
                android:textSize="@dimen/sp15"
                android:textColor="#898989"
                android:layout_marginTop="@dimen/dp15"
                />
            <TextView
                android:id="@+id/use_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp13"
                android:text="123分钟"
                android:textSize="@dimen/sp15"
                android:textColor="#898989"
                android:layout_marginTop="@dimen/dp15"
                />
            <TextView
                android:id="@+id/order_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp13"
                android:text="2541561651"
                android:textSize="@dimen/sp15"
                android:textColor="#898989"
                android:layout_marginTop="@dimen/dp15"
                />

            <TextView
                android:id="@+id/parking_lock_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp13"
                android:text="车锁id"
                android:textSize="@dimen/sp15"
                android:textColor="#898989"
                android:layout_marginTop="@dimen/dp15"
                />
            <TextView
                android:id="@+id/use_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp13"
                android:text="棠东花园B区"
                android:textSize="@dimen/sp15"
                android:textColor="#898989"
                android:layout_marginTop="@dimen/dp15"
                />
            <TextView
                android:id="@+id/parking_space_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp13"
                android:text="充电桩车位"
                android:textSize="@dimen/sp15"
                android:textColor="#898989"
                android:layout_marginTop="@dimen/dp15"
                />

            <TextView
                android:id="@+id/parking_space_serial_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp13"
                android:text="MX02"
                android:textSize="@dimen/sp15"
                android:textColor="#898989"
                android:layout_marginTop="@dimen/dp15"
                />
            <TextView
                android:id="@+id/cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp13"
                android:text="MX02"
                android:textSize="@dimen/sp15"
                android:textColor="#898989"
                android:layout_marginTop="@dimen/dp15"
                />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp0">

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/use_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_marginTop="@dimen/dp5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:background="#f2f2f2"
                android:layout_marginLeft="@dimen/dp13"
                android:layout_marginRight="@dimen/dp13"
                />
            <TextView
                android:layout_marginTop="@dimen/dp15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#27c38a"
                android:textSize="@dimen/sp15"
                android:text="注意：汽车驶离车位将自动结束订单"
                android:layout_gravity="center_horizontal"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/no_use_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <Button
                android:id="@+id/pay_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_btn"
                android:textSize="@dimen/sp15"
                android:textColor="#ffffff"
                android:text="支付"
                android:layout_marginRight="@dimen/dp30"
                android:layout_marginLeft="@dimen/dp30"

                />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>