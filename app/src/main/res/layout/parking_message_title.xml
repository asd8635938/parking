<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/title_bg">
    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@mipmap/left"
        android:paddingLeft="@dimen/dp10"
        android:paddingRight="@dimen/dp30"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="parent"
        />
    <View
        android:id="@+id/vertical_line"
        android:layout_width="@dimen/dp1"
        android:layout_height="@dimen/dp15"
        android:background="#f2f2f2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/parking_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="停车场"
        android:textSize="18sp"
        android:textColor="#27c38a"
        android:layout_marginRight="@dimen/dp35"
        app:layout_constraintRight_toLeftOf="@id/vertical_line"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <View
        android:id="@+id/parking_text_cross"
        android:layout_width="@dimen/dp0"
        android:layout_height="@dimen/dp2"
        android:background="#27c38a"
        app:layout_constraintLeft_toLeftOf="@id/parking_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/parking_text"
        app:layout_constraintEnd_toEndOf="@id/parking_text"
        />

    <TextView
        android:id="@+id/petrol_station_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="加油站"
        android:textSize="18sp"
        android:textColor="#7f8fa9"
        android:layout_marginLeft="@dimen/dp35"
        app:layout_constraintLeft_toRightOf="@id/vertical_line"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <View
        android:id="@+id/petrol_station_text_cross"
        android:layout_width="@dimen/dp0"
        android:layout_height="@dimen/dp2"
        android:background="#27c38a"
        app:layout_constraintLeft_toLeftOf="@id/petrol_station_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/petrol_station_text"
        app:layout_constraintEnd_toEndOf="@id/petrol_station_text"
        android:visibility="invisible"
        />
</android.support.constraint.ConstraintLayout>